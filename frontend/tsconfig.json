{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2021"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@rendering/*": ["rendering/*"],
      "@scenes/*": ["scenes/*"],
      "@ui/*": ["ui/*"],
      "@config/*": ["config/*"],
      "@assets/*": ["assets/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
} 